<%= form_for @student do |f| %>
  <% if @student.errors.any? %>
    <% @student.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <div>
    <label>First Name</label>
    <%=f.text_field:first_name%>
  </div>
  <div>
    <label>Last Name</label>
    <%=f.text_field:last_name%>
  </div>
  <div>
    <label>Email</label>
    <%=f.text_field:email%>
  </div>
  <div>
    <label>Gender</label>
    <%=f.text_field:gender%>
  </div>
  <div>
    <label>Phone</label>
    <%=f.text_field:phone%>
  </div>
<%=f.submit "Create"%>  
<% end %>